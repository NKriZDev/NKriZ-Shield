<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pb_waiting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:visibility="invisible"
                        app:indicatorColor="@color/color_fab_active" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_open_server_list"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_spacing_dp8"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="@string/open_server_list"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_advanced_settings_main"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/padding_spacing_dp8"
                        android:layout_marginEnd="@dimen/padding_spacing_dp8"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="@string/advanced_settings"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/server_list_container"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:background="?attr/colorSurface"
                        android:elevation="4dp"
                        android:padding="@dimen/padding_spacing_dp8">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tab_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:visibility="gone"
                            android:background="@android:color/transparent"
                            app:tabIndicatorFullWidth="false"
                            app:tabMode="scrollable"
                            app:tabTextAppearance="@style/TabLayoutTextStyle" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_close_server_list"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="@string/close_server_list"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white" />

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/search_view_server"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:iconifiedByDefault="false"
                            android:queryHint="@string/menu_item_search" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:scrollbars="vertical" />
                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:foregroundGravity="center"
                        android:paddingBottom="@dimen/padding_spacing_dp8"
                        android:clipChildren="false"
                        android:clipToPadding="false">

                        <LinearLayout
                            android:id="@+id/connect_block"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/flow_button_container"
                                android:layout_width="@dimen/action_container_size"
                                android:layout_height="@dimen/action_container_size"
                                android:clipChildren="false"
                                android:clipToPadding="false">

                                <View
                                    android:id="@+id/cloud_glow_flow"
                                    android:layout_width="@dimen/cloud_glow_small_size"
                                    android:layout_height="@dimen/cloud_glow_small_size"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_cloud_glow_small"
                                    android:visibility="invisible" />

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progress_flow"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="true"
                                    android:translationZ="2dp"
                                    android:visibility="invisible"
                                    app:indicatorInset="0dp"
                                    app:indeterminateAnimationType="contiguous"
                                    app:indicatorColor="@color/action_line_active"
                                    app:indicatorSize="@dimen/action_container_size"
                                    app:trackColor="@android:color/transparent"
                                    app:trackThickness="@dimen/action_progress_thickness" />

                                <View
                                    android:id="@+id/ring_flow_done"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_action_complete_ring"
                                    android:visibility="invisible" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_flow_start"
                                    style="@style/Widget.MaterialComponents.Button"
                                    android:layout_width="@dimen/action_button_size"
                                    android:layout_height="@dimen/action_button_size"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/action_button_bg"
                                    android:contentDescription="@string/title_start_flow"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:padding="0dp"
                                    android:text=""
                                    app:cornerRadius="@dimen/action_button_radius"
                                    app:icon="@drawable/ic_circle"
                                    app:iconGravity="textStart"
                                    app:iconPadding="0dp"
                                    app:iconSize="@dimen/action_icon_small"
                                    app:iconTint="@color/action_button_icon"
                                    app:rippleColor="@color/action_line_active"
                                    app:strokeColor="@color/action_button_stroke"
                                    app:strokeWidth="2dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/line_flow_update_container"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/action_line_height_small">

                                <View
                                    android:id="@+id/line_flow_update"
                                    android:layout_width="@dimen/action_line_width"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/action_line_dim" />

                                <View
                                    android:id="@+id/line_flow_update_active"
                                    android:layout_width="@dimen/action_line_width_active"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/action_line_active"
                                    android:visibility="invisible" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/update_button_container"
                                android:layout_width="@dimen/action_container_size"
                                android:layout_height="@dimen/action_container_size"
                                android:clipChildren="false"
                                android:clipToPadding="false">

                                <View
                                    android:id="@+id/cloud_glow_update"
                                    android:layout_width="@dimen/cloud_glow_small_size"
                                    android:layout_height="@dimen/cloud_glow_small_size"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_cloud_glow_small"
                                    android:visibility="invisible" />

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progress_update"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="true"
                                    android:translationZ="2dp"
                                    android:visibility="invisible"
                                    app:indicatorInset="0dp"
                                    app:indeterminateAnimationType="contiguous"
                                    app:indicatorColor="@color/action_line_active"
                                    app:indicatorSize="@dimen/action_container_size"
                                    app:trackColor="@android:color/transparent"
                                    app:trackThickness="@dimen/action_progress_thickness" />

                                <View
                                    android:id="@+id/ring_update_done"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_action_complete_ring"
                                    android:visibility="invisible" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_reload_subscription"
                                    style="@style/Widget.MaterialComponents.Button"
                                    android:layout_width="@dimen/action_button_size"
                                    android:layout_height="@dimen/action_button_size"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/action_button_bg"
                                    android:contentDescription="@string/title_sub_update"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:padding="0dp"
                                    android:text=""
                                    app:cornerRadius="@dimen/action_button_radius"
                                    app:icon="@drawable/ic_check_update_24dp"
                                    app:iconGravity="textStart"
                                    app:iconPadding="0dp"
                                    app:iconSize="@dimen/action_icon_size"
                                    app:iconTint="@color/action_button_icon"
                                    app:rippleColor="@color/action_line_active"
                                    app:strokeColor="@color/action_button_stroke"
                                    app:strokeWidth="2dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/line_update_speedtest_container"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/action_line_height_small">

                                <View
                                    android:id="@+id/line_update_speedtest"
                                    android:layout_width="@dimen/action_line_width"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/action_line_dim" />

                                <View
                                    android:id="@+id/line_update_speedtest_active"
                                    android:layout_width="@dimen/action_line_width_active"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/action_line_active"
                                    android:visibility="invisible" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/speedtest_button_container"
                                android:layout_width="@dimen/action_container_size"
                                android:layout_height="@dimen/action_container_size"
                                android:clipChildren="false"
                                android:clipToPadding="false">

                                <View
                                    android:id="@+id/cloud_glow_speedtest"
                                    android:layout_width="@dimen/cloud_glow_small_size"
                                    android:layout_height="@dimen/cloud_glow_small_size"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_cloud_glow_small"
                                    android:visibility="invisible" />

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progress_speedtest"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="true"
                                    android:translationZ="2dp"
                                    android:visibility="invisible"
                                    app:indicatorInset="0dp"
                                    app:indeterminateAnimationType="contiguous"
                                    app:indicatorColor="@color/action_line_active"
                                    app:indicatorSize="@dimen/action_container_size"
                                    app:trackColor="@android:color/transparent"
                                    app:trackThickness="@dimen/action_progress_thickness" />

                                <View
                                    android:id="@+id/ring_speedtest_done"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_action_complete_ring"
                                    android:visibility="invisible" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_test_and_select_best"
                                    style="@style/Widget.MaterialComponents.Button"
                                    android:layout_width="@dimen/action_button_size"
                                    android:layout_height="@dimen/action_button_size"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/action_button_bg"
                                    android:contentDescription="@string/title_test_and_select_best"
                                    android:foreground="?attr/selectableItemBackgroundBorderless"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:padding="0dp"
                                    android:text=""
                                    app:cornerRadius="@dimen/action_button_radius"
                                    app:icon="@drawable/ic_play_24dp"
                                    app:iconGravity="textStart"
                                    app:iconPadding="0dp"
                                    app:iconSize="@dimen/action_icon_size"
                                    app:iconTint="@color/action_button_icon"
                                    app:rippleColor="@color/action_line_active"
                                    app:strokeColor="@color/action_button_stroke"
                                    app:strokeWidth="2dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/line_speedtest_connect_container"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/action_line_height_mid">

                                <View
                                    android:id="@+id/line_speedtest_connect"
                                    android:layout_width="@dimen/action_line_width"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/action_line_dim" />

                                <View
                                    android:id="@+id/line_speedtest_connect_active"
                                    android:layout_width="@dimen/action_line_width_active"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/action_line_active"
                                    android:visibility="invisible" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/connect_button_container"
                                android:layout_width="@dimen/connect_container_size"
                                android:layout_height="@dimen/connect_container_size"
                                android:layout_marginBottom="@dimen/padding_spacing_dp8"
                                android:clipChildren="false"
                                android:clipToPadding="false">

                                <View
                                    android:id="@+id/cloud_glow"
                                    android:layout_width="@dimen/cloud_glow_size"
                                    android:layout_height="@dimen/cloud_glow_size"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_cloud_glow"
                                    android:visibility="invisible" />

                                <com.google.android.material.progressindicator.CircularProgressIndicator
                                    android:id="@+id/progress_connect"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:indeterminate="true"
                                    android:translationZ="2dp"
                                    android:visibility="invisible"
                                    app:indicatorInset="0dp"
                                    app:indeterminateAnimationType="contiguous"
                                    app:indicatorColor="@color/action_line_active"
                                    app:indicatorSize="@dimen/connect_container_size"
                                    app:trackColor="@android:color/transparent"
                                    app:trackThickness="@dimen/connect_progress_thickness" />

                                <View
                                    android:id="@+id/ring_connect_done"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/bg_connect_complete_ring"
                                    android:visibility="invisible" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_connect"
                                    style="@style/Widget.MaterialComponents.Button"
                                    android:layout_width="@dimen/connect_button_size"
                                    android:layout_height="@dimen/connect_button_size"
                                    android:layout_gravity="center"
                                    android:backgroundTint="@color/connect_button_bg"
                                    android:gravity="center"
                                    android:lines="2"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:textColor="@android:color/white"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:text="@string/action_connect"
                                    android:textAllCaps="false"
                                    android:textSize="22sp"
                                    app:cornerRadius="@dimen/connect_button_radius"
                                    app:strokeColor="@color/action_button_stroke"
                                    app:strokeWidth="2dp" />
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_spacing_dp12"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingStart="@dimen/padding_spacing_dp16"
                                android:paddingEnd="@dimen/padding_spacing_dp16">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/layout_test"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/padding_spacing_dp8"
                                    android:minHeight="@dimen/view_height_dp48"
                                    android:minWidth="@dimen/view_height_dp48"
                                    android:padding="0dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:insetLeft="0dp"
                                    android:insetRight="0dp"
                                    app:icon="@drawable/ic_speedtest_24dp"
                                    app:iconGravity="textStart"
                                    app:iconSize="24dp"
                                    app:iconTint="@color/action_button_icon"
                                    app:strokeColor="@color/action_button_stroke"
                                    app:strokeWidth="1dp"
                                    app:cornerRadius="12dp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_select_next_server"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="@dimen/padding_spacing_dp8"
                                    android:minHeight="@dimen/view_height_dp48"
                                    android:minWidth="@dimen/view_height_dp48"
                                    android:padding="0dp"
                                    android:insetTop="0dp"
                                    android:insetBottom="0dp"
                                    android:insetLeft="0dp"
                                    android:insetRight="0dp"
                                    app:icon="@drawable/ic_next_server_24dp"
                                    app:iconGravity="textStart"
                                    app:iconSize="24dp"
                                    app:iconTint="@color/action_button_icon"
                                    app:strokeColor="@color/action_button_stroke"
                                    app:strokeWidth="1dp"
                                    app:cornerRadius="12dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="gone"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/colorAccent"
        app:menu="@menu/menu_drawer">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
